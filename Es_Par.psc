Proceso Es_Par
//Nombre Algoritmo: Determinar par
//Entrada: Ingresar un número entero             
//Salida: Decir si ese número es par o impar
	Escribir 'Verificar si el numero es par o impar';
	Leer num;
	
	Si num % 2 = 0 Entonces
		Escribir 'El numero es par';
	SiNo
		Escribir 'El numero es impar';
	FinSi
	
FinProceso
